{% extends '::base.html.twig' %}
{% block css %}
        <link href="{{ asset('public/global/plugins/jquery-multi-select/css/multi-select.css') }}" rel="stylesheet" type="text/css" />

{% endblock css %}

{% block body -%}

    {% block form -%}
        {{ render (controller('UsuarioBundle:Usuarios:new')) }}
    {% endblock %}

   <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                            <span class="caption-subject bold uppercase"> Lista Usuarios</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">
                        <thead>
                            <tr>
                                <th class="oculto">Id</th>
                                <th>Nombre de Usuario</th>
                                <th>Nombre</th>
                                <th>Rol</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% block lista -%}
                            {{ render(controller('UsuarioBundle:Usuarios:listado')) }}
                        {% endblock %}
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('public/global/plugins/select2/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('public/global/plugins/jquery-multi-select/js/jquery.multi-select.js') }}"></script>
    <script src="{{ asset('public/pages/scripts/components-multi-select.min.js') }}"></script>

{% endblock javascripts %}
